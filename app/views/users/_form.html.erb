<%= form_for(@user) do |f| %>

  <%= render 'error_messages' %>

  <div class="form-group">
    <%= f.label :nom, "Votre nom" %><br>
    <%= f.text_field :nom, class: "form-control", placeholder: "Nom" %>
  </div>
  <div class="form-group">
    <%= f.label :email, "Votre adresse email" %><br>
    <%= f.email_field :email, class: "form-control", placeholder: "Email" %>
  </div>
  <div class="form-group">
    <%= f.label :password, "Mot de passe" %><br>
    <%= f.password_field :password, class: "form-control", placeholder: "Mot de passe" %>
  </div>
  <div class="form-group">
    <%= f.label :password_confirmation, "Répétez votre mot de passe" %><br>
    <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Répétez votre mot de passe" %>
  </div>
  <div class="form-group">
    <%= f.submit "Enregistrer", class: "btn btn-success" %>
  </div>
<% end %>
