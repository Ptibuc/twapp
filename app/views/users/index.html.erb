<p id="notice"><%= notice %></p>

<h1>Listing Users</h1>

<table>
  <thead>
    <tr>
      <th>Nom</th>
      <th>Email</th>
      <th colspan="3" class="last"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td>
          <%= gravatar_for user, :size => 20 %>
          <%= user.nom %></td>
        <td><%= user.email %></td>
        <td><%= link_to 'Afficher', user, class: "btn btn-xs" %></td>
        <td><%= link_to 'Editer', edit_user_path(user), class: "btn btn-xs" %></td>
        <td><%= link_to 'Supprimer', user, method: :delete, data: { confirm: 'Vous êtes sûr ?' }, class: "btn btn-xs btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

